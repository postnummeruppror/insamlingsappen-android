<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="insamlingsappen.postnummeruppror.nu.insamlingsappen.DataEntryActivity">

  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


    <LinearLayout
      android:id="@+id/data_entry_view"
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:visibility="visible"
      >


      <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/postnummer_header"/>


      <EditText
        android:id="@+id/location_postal_code"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="number"/>


      <Button
        android:id="@+id/submit_location_sample"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="@string/send_postnummer"/>

      <View
        android:layout_width="fill_parent"
        android:layout_height="16dp"/>

    </LinearLayout>

    <!-- waiting for location fix -->

    <LinearLayout
      android:id="@+id/waiting_for_location_fix_view"
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:orientation="vertical"
      android:visibility="visible">

      <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/location_fix_label"/>


      <ProgressBar
        android:id="@+id/location_fix_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>


    </LinearLayout>


    <LinearLayout
      android:id="@+id/fixed_location_view"
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:visibility="visible">


      <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/location_header"/>


      <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

        <TextView
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_marginRight="16dp"
          android:text="@string/timestamp"/>

        <TextView
          android:id="@+id/location_timestamp"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:text="@string/not_applicable"/>

      </LinearLayout>


      <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

        <TextView
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_marginRight="16dp"
          android:text="@string/provider"/>

        <TextView
          android:id="@+id/provider"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:text="@string/not_applicable"/>

      </LinearLayout>


      <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


        <TextView
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_marginRight="16dp"
          android:text="@string/altitude"/>

        <TextView
          android:id="@+id/location_altitude"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:text="@string/not_applicable"/>

      </LinearLayout>

      <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


        <TextView
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_marginRight="16dp"
          android:text="@string/accuracy"/>

        <TextView
          android:id="@+id/location_accuracy"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:text="@string/not_applicable"/>
      </LinearLayout>

      <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


        <TextView
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_marginRight="16dp"
          android:text="@string/latitude"/>

        <TextView
          android:id="@+id/location_latitude"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:text="@string/not_applicable"/>
      </LinearLayout>

      <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

        <TextView
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_marginRight="16dp"
          android:text="@string/longitude"/>


        <TextView
          android:id="@+id/location_longitude"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:text="@string/not_applicable"/>

      </LinearLayout>

    </LinearLayout>

  </LinearLayout>

</RelativeLayout>
